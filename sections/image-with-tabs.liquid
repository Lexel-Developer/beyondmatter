{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;

    --section-padding-left: {{ section.settings.padding_left }}px;
    --section-padding-right: {{ section.settings.padding_right }}px;
    --section-margin-top: {{ section.settings.margin_top }}px;
    --section-margin-bottom: {{ section.settings.margin_bottom }}px;

    --primary-background: {{ section.settings.primary_background }};
    --secondary-background: {{ section.settings.secondary_background }};
    
    {%- if section.settings.use_custom_colors %}
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% endif %};
      --box-background: {{ section.settings.colors_background }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
      --color-active-progress-background: {{ section.settings.active_progress_background.red }}, {{ section.settings.active_progress_background.green }}, {{ section.settings.active_progress_background.blue }};
      --color-default-progress-background: {{ section.settings.default_progress_background.red }}, {{ section.settings.default_progress_background.green }}, {{ section.settings.default_progress_background.blue }};
      --color-link: var(--color-foreground);
      --color-border: var(--color-foreground);
      --color-heading: var(--color-foreground);
      --primary-button-background: {{ section.settings.colors_button_background }};
      --primary-button-text: {{ section.settings.colors_button_label }};
      --color-button-border: var(--primary-button-background);
      --color-shadow: var(--color-foreground);
      --box-background: {{ section.settings.box_background }};
    {% endif -%}
    --shadow-opacity: 0.3;
  }
  {%- if section.settings.image_mobile != blank and section.settings.mobile_image_ratio == 'adapt' %}
    @media screen and (max-width: 749px) {
      #shopify-section-{{ section.id }} {
        --image-ratio-percent: {{ 1 | divided_by: section.settings.image_mobile.aspect_ratio | times: 100 }}%;
      }
    }
    {% endif -%}

  {% if section.settings.mobile_box_spacing != blank %}
    .grid--{{ section.id }} {
      padding:{{ section.settings.mobile_box_spacing }}px;
    }
  {% endif %}

  @media only screen and (min-width:990px){
    {% if section.settings.desktop_box_spacing != blank %}
      .grid--{{ section.id }} {
        padding:{{ section.settings.desktop_box_spacing }}px;
      }
    {% endif %}
  }


  @media only screen and (max-width:749px){
    #shopify-section-{{ section.id }} .section--padding {
      --section-padding-top: {{ section.settings.mobile_padding_top }}px;
      --section-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      padding-top:var(--section-padding-top);
      padding-bottom:var(--section-padding-bottom);
    }
  }
{%- endstyle -%}

{{ 'section-image-with-tabs.css' | asset_url | stylesheet_tag }}
{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign grid_class = 'image-with-text__grid'
  if section.settings.layout == 'text_first'
    assign grid_class = grid_class | append: ' image-with-text__grid--reverse'
  endif

  if section.settings.mobile_layout == 'text_first'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--reverse'
  endif

  if section.settings.mobile_layout == 'no_image'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--no-image'
  endif

  if section.settings.mobile_layout == 'overlap'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--overlap'
  endif
-%}

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="image-with-text mage-with-text--medium page-width--{{ section.settings.page_width }}">
    {% if section.settings.show_inside_box == true %}<div class="tabs_enable_big_box">{% endif %}
    <div class="{{ grid_class }} grid--{{ section.id }} grid grid--gapless grid--1-col grid--2-col-tablet">

      <div class="grid__item">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'iwt_block' %}
              {% style %}
              #block--{{ block.id }}{

                  {%- if block.settings.image != blank %}
                    --image-ratio-percent: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;
                    --image-position: {{ section.settings.image_position }};
                  {% elsif block.settings.video != null %}
                    {% assign poster = block.settings.video.preview_image %}
                    --image-ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;
                  {% elsif block.settings.video_url != blank %}
                    --image-ratio-percent: 100%;
                  {% endif -%}
              }
              {% endstyle %}
              {% if block.settings.video == blank and block.settings.video_url == blank %}
                <use-animate id="block--{{ block.id }}" data-animate="zoom-fade" class="media-wrapper" data-id="tab{{ block.id }}">
                    {% if block.settings.image != blank or block.settings.image_mobile != blank %}
                    <div class="image-animate media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} {% if block.settings.image != blank %}media{% else %}media--placeholder{% endif %}{% if block.settings.image_behavior != 'none' %} animate--{{ block.settings.image_behavior }}{% endif %}">
                      {%- if block.settings.image != blank -%}
                        {%- if block.settings.image_behavior == 'ambient' -%}
                          {%- assign widths = '198, 432, 642, 900, 1320, 1800' -%}
                          {%- capture sizes -%}
                          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                          (min-width: 750px) calc((100vw - 10rem) / 1.667), {% if section.settings.full_width %} calc(100vw / 1.667){% else %} calc((100vw - 3rem) / 1.667){% endif %}
                        {%- endcapture -%}
                        {%- else -%}
                          {%- assign widths = '165, 360, 535, 750, 1100, 1500' -%}
                          {%- capture sizes -%}
                          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                          (min-width: 750px) calc((100vw - 10rem) / 2), {% if section.settings.full_width %} 50vw{% else %} calc((100vw - 3rem) / 2){% endif %}
                        {%- endcapture -%}
                        {%- endif -%}
                        {%- liquid
                          if block.settings.image_mobile == blank
                            echo block.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'image-fit', sizes: sizes, widths: widths, is: 'lazy-image'
                          else
                            echo block.settings.image_mobile | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'image-fit medium-hide large-up-hide', sizes: sizes, widths: widths, is: 'lazy-image'
                            echo block.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', class: 'image-fit small-hide', sizes: sizes, widths: widths, is: 'lazy-image'
                          endif
                        -%}
                      {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder' }}
                      {%- endif -%}
                    </div>
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: 'placeholder' }}
                    {% endif %}
                </use-animate>
              {% else %}
                {% comment %} VIDEO PART {% endcomment %}
                <div class="image-with-text--video image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}">
                  {%- liquid
                    assign video_id = block.settings.video.id | default: block.settings.video_url.id
                    assign video_alt = block.settings.video.alt | default: block: section.settings.description
                    assign alt = 'sections.video.load_video' | t: description: video_alt | escape
                    assign poster = block.settings.image | default: block.settings.video.preview_image
                    if block.settings.image_mobile != blank
                      assign poster_mobile = block.settings.image_mobile | default: block.settings.video.preview_image
                    else
                      assign poster_mobile = section.settings.image | default: block.settings.video.preview_image
                    endif
                    if block.settings.video != null
                      assign ratio_diff = block.settings.video.aspect_ratio | minus: poster.aspect_ratio | abs
                      if ratio_diff < 0.01 and ratio_diff > 0
                        assign fix_ratio = true
                      endif
                    endif
                  -%}
    
                  <noscript>
                    <div class="image-with-text-video-section__media">
                      {%- if block.settings.video == null and block.settings.video_url != null -%}
                        <a href="{{ block.settings.video_url }}" class="card-wrapper">
                          <div class="card deferred-media__poster">
                            <span class="deferred-media__poster-button motion-reduce">
                              {%- render 'icon', icon: 'play' -%}
                            </span>
    
                            <div class="media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}">
                              {%- if poster != null -%}
                                {{
                                  poster
                                  | image_url: width: 1500
                                  | image_tag:
                                    loading: 'lazy',
                                    class: 'image-fit medium-hide large-up-hide',
                                    sizes: sizes,
                                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000'
                                }}
                                {{
                                  poster_mobile
                                  | image_url: width: 1500
                                  | image_tag:
                                    loading: 'lazy',
                                    class: 'image-fit small-hide',
                                    sizes: sizes,
                                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000'
                                }}
                              {%- else -%}
                                {{
                                  'hero-apparel-3'
                                  | placeholder_svg_tag: 'placeholder-svg placeholder collage-card__image'
                                }}
                              {%- endif -%}
                            </div>
                          </div>
                        </a>
                      {%- else -%}
                        {{
                          block.settings.video
                          | video_tag:
                            image_size: '1100x',
                            loop: block.settings.enable_video_looping,
                            controls: true,
                            muted: false
                        }}
                      {%- endif -%}
                    </div>
                  </noscript>
                  <deferred-media
                    class="card-wrapper deferred-media no-js-hidden media-wrapper media-wrapper--large{% if fix_ratio %} media-fit-cover{% endif %}"
                    data-media-id="{{ video_id }}"
                  >
                    <button
                      id="Deferred-Poster-{{ block.settings.video_url.id }}"
                      class="card deferred-media__poster"
                      type="button"
                    >
                      <span class="deferred-media__poster-button motion-reduce">
                        {%- render 'icon', icon: 'play' -%}
                      </span>
                      <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                        {%- if poster != blank -%}
                          {%- assign alt = 'sections.video.load_video'
                            | t: description: section.settings.description
                            | escape
                          -%}
                          {{
                            poster
                            | image_url: width: 1500
                            | image_tag:
                              loading: 'lazy',
                              class: 'image-fit medium-hide large-up-hide',
                              sizes: sizes,
                              widths: '375, 750, 1100, 1500, 1780, 2000, 3000',
                              alt: alt,
                              is: 'lazy-image'
                          }}
                          {{
                            poster_mobile
                            | image_url: width: 1500
                            | image_tag:
                              loading: 'lazy',
                              class: 'image-fit small-hide',
                              sizes: sizes,
                              widths: '375, 750, 1100, 1500, 1780, 2000, 3000',
                              alt: alt,
                              is: 'lazy-image'
                          }}
                        {%- else -%}
                          {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder collage-card__image' }}
                        {%- endif -%}
                      </use-animate>
                    </button>
                    <template>
                      {%- if block.settings.video == null and block.settings.video_url != null -%}
                        <video-section
                          data-init-mode="template"
                          data-parent="deferred-media"
                          data-loop="{% if block.settings.enable_video_looping %}1{% else %}0{% endif %}"
                          data-type="{{ block.settings.video_url.type }}"
                          data-video-id="{{ block.settings.video_url.id }}"
                        ></video-section>
                      {%- else -%}
                        {{
                          block.settings.video
                          | video_tag:
                            image_size: '1100x',
                            autoplay: true,
                            loop: section.settings.enable_video_looping,
                            controls: true,
                            muted: false
                        }}
                      {%- endif -%}
                    </template>
                  </deferred-media>
                </div>
              {% endif %}
              {% if section.settings.main_description != blank %}
                <div class="grid_description-cvr image-with-text__content {{ section.settings.text_box_position }} {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }}">
                  {{ section.settings.main_description }}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>



      <div class="grid__item">
        <div class="image-with-text__content {{ section.settings.text_box_position }} {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }}">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <{{ block.settings.heading_tag }}
                  class="image-with-text__heading {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.heading -}}
                </{{ block.settings.heading_tag }}>
              {%- when 'subheading' -%}
                {% if block.settings.subheading != blank %}
                  <h3 class="h1 sub_title" style="color: {{ block.settings.sub_text_color }};">
                    {{ block.settings.subheading }}
                  </h3>
                {% endif %}
              {%- when 'text' -%}
                <div
                  class="image-with-text__text{% if block.settings.secondary_color %} image-with-text__text--colored{% endif %} {{ block.settings.text_size }} rte"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </div>
              {%- when 'custom_liquid' -%}
                <div class="image-with-text__text rte" {{ block.shopify_attributes }}>
                  {{ block.settings.custom_liquid }}
                </div>
            {%- endcase -%}
          {%- endfor -%}

          <div class="iwt-tab-main-cover desktop-tabs">
            <div class="iwt-tab-cover">
              <div class="iwt-tab-nav">
                <ul>
                  {% assign active_tab = 1 %}
                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'iwt_block' %}
                        {% if block.settings.tab_title != blank %}
                          <li
                            class="tab-target{% if forloop.index == active_tab %} active{% endif %}"
                            rel="tab{{ block.id }}"
                            {{ block.shopify_attributes }}
                          >
                            {{ block.settings.tab_title }}
                          </li>
                        {% endif %}
                    {% endcase %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>

          <div class="iwt-tab">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'iwt_block' %}

                  <div
                    id="tab{{ block.id }}"
                    class="{% if forloop.index == 1 %} active{% endif %} iwt-tab-data-main-cvr"
                    {{ block.shopify_attributes }}
                  >
                    {% if block.settings.tab_title != blank %}
                      <div
                        class="mobile-tabs-accordion tab-target{% if forloop.index == active_tab %} active{% endif %}"
                        rel="tab{{ block.id }}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.tab_title }}
                      </div>
                    {% endif %}
                    <div class="iwt-tab-data-inr-wrap">
                      {% if block.settings.progress_description != blank %}
                        <div class="iwt-progress-description">
                          {{ block.settings.progress_description }}
                        </div>
                      {% endif %}
                      <div class="iwt-progress-inr-cvr">
                        <div class="iwt-progress-cvr">
                          {% if block.settings.main_title != blank %}
                            <div class="iwt-progress-counter">
                              <h2 class="counter-title x-large">{{ block.settings.main_title }}%</h2>
                            </div>
                          {% endif %}
                          <div class="iwt-progress-inr">
                            {% if block.settings.progress_label != blank %}
                              <div class="iwt-progress-label">
                                <p>{{ block.settings.progress_label }}</p>
                              </div>
                            {% endif %}
                            <div class="iwt-pl-cvr">
                              <div class="iwt-progress-static"></div>
                              <div class="iwt-progress-active" style="max-width:{{ block.settings.main_title }}%"></div>
                            </div>
                          </div>
                        </div>
                        <div class="iwt-progress-cvr">
                          {% if block.settings.main_title2 != blank %}
                            <div class="iwt-progress-counter">
                              <h2 class="counter-title x-large">{{ block.settings.main_title2 }}%</h2>
                            </div>
                          {% endif %}
                          <div class="iwt-progress-inr">
                            {% if block.settings.progress_label2 != blank %}
                              <div class="iwt-progress-label">
                                <p>{{ block.settings.progress_label2 }}</p>
                              </div>
                            {% endif %}
                            <div class="iwt-pl-cvr">
                              <div class="iwt-progress-static"></div>
                              <div
                                class="iwt-progress-active"
                                style="max-width:{{ block.settings.main_title2 }}%"
                              ></div>
                            </div>
                          </div>
                        </div>
                        <div class="iwt-progress-cvr">
                          <div class="iwt-progress-counter">
                            <h2 class="counter-title x-large">{{ block.settings.main_title3 }}%</h2>
                          </div>
                          <div class="iwt-progress-inr">
                            {% if block.settings.progress_label3 != blank %}
                              <div class="iwt-progress-label">
                                <p>{{ block.settings.progress_label3 }}</p>
                              </div>
                            {% endif %}
                            <div class="iwt-pl-cvr">
                              <div class="iwt-progress-static"></div>
                              <div
                                class="iwt-progress-active"
                                style="max-width:{{ block.settings.main_title3 }}%"
                              ></div>
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="iwt-button-cvr">
                        {%- if block.settings.button_label != blank -%}
                          <div class="button-list-cover">
                            <a
                              class="button button--{{ block.settings.button_style }}"
                              {% if block.settings.button_link != blank %}
                                href="{{ block.settings.button_link }}"
                              {% else %}
                                role="link" aria-disabled="true"
                              {% endif %}
                            >
                              <span class="label">{{ block.settings.button_label | escape }}</span>
                              {% if block.settings.enbale_icon == true %}{% render 'icon', icon: 'arrow' %}{% endif %}
                            </a>
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
    {% if section.settings.show_inside_box == true %}</div>{% endif %}
  </div>
</div>

